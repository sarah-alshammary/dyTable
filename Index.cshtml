@{
    Layout = null;

    var users = new[]
    {
        new { Username = "Sarah", Age = 23, Email = "sarah@gmail.com" },
        new { Username = "Yaqeen", Age = 23, Email = "yaqeen@gmail.com" },
        new { Username = "Lojain", Age = 22, Email = "lojain@gmail.com" }
    };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Users List</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 220px;
            height: 100vh;
            background-color: #2f3640;
            color: white;
            padding: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                margin: 15px 0;
            }

                .sidebar a:hover {
                    text-decoration: underline;
                }

        .content {
            padding: 30px;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4>Admin Menu</h4>
            <a href="#">Dashboard</a>
            <a href="#">Users</a>
            <a href="#">Settings</a>
            <a href="#">Logout</a>
        </div>

        <!-- Content -->
        <div class="content">
            <h2>Users List</h2>

            <table class="table table-bordered mt-4">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Age</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Age</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>

